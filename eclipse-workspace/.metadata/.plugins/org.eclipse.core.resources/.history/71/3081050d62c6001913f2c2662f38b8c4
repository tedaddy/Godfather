		JLabel secondsLabel = new JLabel(preparation_time + " secs");
		secondsLabel.setFont(new Font("Arial Rounded MT Bold", Font.PLAIN, 20));
		secondsLabel.setForeground(new Color(26,49,68));
		secondsLabel.setBounds(1773, 1049, 100, 20);
		contentPane.add(secondsLabel);
		
	    Timer timer = new Timer(1000, new ActionListener() {
	        public void actionPerformed(ActionEvent e) { 
	        	seconds_counter+=1;
	        	progressBar.setValue(progressBar.getValue()+1);
	        	secondsLabel.setText(preparation_time - seconds_counter + " secs");
	        	if( seconds_counter==preparation_time ) ((Timer)e.getSource()).stop();
	        }
	    });
	    
	    seconds_counter=0;
	    timer.start();
		
	}
}
